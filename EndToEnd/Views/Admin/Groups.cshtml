
@model IEnumerable<EndToEnd.Models.Groups>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Back to Liiiiiiiiiiist", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Add Groups", "AddGroups", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            Groups
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @if (item.GroupName.ToLower() != "administrator")
                {
                    @Html.ActionLink("Delete", "DeleteUserRole",
                   new { GroupName = item.GroupName },
                   new
                   {
                       onclick =
                   "return confirm('Are you sure you wish to delete this role?');"
                   })
                }
            </td>

        </tr>
    }
</table>
